# Command aliases for the git(1) command wrapper
[alias]
        # add
        a     = add
        aa    = add --all
        an    = add --all --intent-to-add
        ap    = add --patch
        # apply
        ap    = apply
        # branch
        b     = branch
        ba    = branch --all
        bd    = branch --delete
        bD    = branch --delete --force
        bnm   = branch --no-merged
        br    = branch --remote
        # blame
        bl    = blame -bw
        # bisect
        bs    = bisect
        bsb   = bisect bad
        bsg   = bisect good
        bsr   = bisect reset
        bss   = bisect start
        # checkout
        co    = checkout
        cor   = checkout --recurse-submodules
        com   = checkout main
        # checkout-index
        ci    = checkout-index
        # cherry-pick
        cp    = cherry-pick
        cpa   = cherry-pick --abort
        cpc   = cherry-pick --continue
        # clean
        cl    = clean -d --interactive
        cL    = clean -dffx
        # clone
        rc    = clone --recurse-submodules
        # commit
        c     = commit
        cm    = commit --message
        cx    = commit --amend
        cxn   = commit --amend --no-edit
        ca    = commit --all
        cam   = commit --all --message
        cax   = commit --all --amend
        caxn  = commit --all --amend --no-edit
        # config
        cf    = config
        cfl   = config --local
        cfg   = config --global
        # diff
        d     = diff
        dw    = diff --word-diff
        dc    = diff --cached
        dcw   = diff --cached --word-diff
        # fetch
        f     = fetch
        fa    = fetch --all --prune
        sync  = fetch --all --prune --prune-tags
        # help
        h     = help
        # merge
        m     = merge
        ma    = merge --abort
        mc    = merge --continue
        # pull
        l     = pull
        up    = pull --rebase
        upa   = pull --rebase --autostash
        # push
        p     = push
        pa    = push --all
        pat   = push --all --tags
        pf    = push --force-with-lease
        pt    = push --tags
        # log
        la    = ld --all
        ls    = ld --branches --tags --remotes
        ld    = log --pretty=dotted --graph
        lf    = log --pretty=fuller --graph
        lg    = log --pretty=fuller --stat --graph
        lh    = log --pretty=fuller --stat --patch
        # rebase
        rb    = rebase
        rba   = rebase --abort
        rbc   = rebase --continue
        rbd   = rebase --committer-date-is-author-date
        rbi   = rebase --interactive
        # remote
        r     = remote
        ra    = remote add
        rrn   = remote rename
        rrm   = remote remove
        rset  = remote set-url
        rup   = remote update
        rv    = remote --verbose
        # remove
        rm    = remove
        # reset
        rs    = reset
        rsh   = reset --hard
        # restore
        ro    = restore
        ros   = restore --staged
        # rev-list
        root  = rev-list --abbrev-commit --max-parents=0 HEAD
        # revert
        rev   = revert
        # show
        sh    = show
        # stash
        z     = stash
        za    = stash apply
        zc    = stash clear
        zd    = stash drop
        zl    = stash list
        zp    = stash pop
        zsh   = stash show --text
        zu    = stash apply --include-untracked
        # status
        st    = status
        sb    = status --branch --short
        ss    = status --short
        # submodule
        sub   = submodule
        si    = submodule init
        su    = submodule update --init
        # switch
        sw    = switch
        swc   = switch --create
        swC   = switch --force-create
        # tag
        t     = tag
        ta    = tag --annotate
        ts    = tag --sign

[pretty]
        dotted = %C(bold italic yellow)%h%Creset %C(italic blue)%ar%Creset %s%C(auto)%d%Creset %>|(-1,ltrunc)%C(239)%an%Creset

# -- Developer --
function runc() { gcc $@ && ./a.out && rm a.out; }

# -- Filesystem --
function finder() { find ${2:-.} -iname "*$1*"; }
function findin() { grep -yErIn --color=always $1 ${2:-.}; }
function trash() { mv -f $@ ~/.Trash; }
